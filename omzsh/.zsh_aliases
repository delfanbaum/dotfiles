# git
alias gp="git push"
alias gs="git status"

# tmux (because who needs an extra plugin if all you use is this?) 
alias ta='tmux attach -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'

# neovim
alias nv='nvim'

# python
alias py="python"
alias pr="poetry run"
alias prpy="poetry run python"
alias dm="poetry run python manage.py"
alias devc_up="devcontainer up --workspace-folder ."
alias devc_exec="devcontainer exec --workspace-folder ."

# ruby
alias be='bundle exec'

# zellij
alias za='zellij attach'
alias zs='zellij attach --create'
alias zl='zellij list-sessions'
alias zk='zellij kill-sessions'
alias zka='zellij kill-all-sessions'
alias zd='zellij d'
alias zda='zellij delete-all-sessions'
